<%= render ViewComponentUI::ModalComponent.new(id: 'something') do |modal| %>
  <%= modal.with_trigger do %>
    Modal Trigger
  <% end %>

  <%= modal.with_head do %>
    <%= render ViewComponentUI::HeadingComponent.new do %>
      Modal Title
    <% end %>
  <% end %>

  <%= modal.with_body do %>
    This is the body of the modal.
  <% end %>

  <%= modal.with_footer do %>
    <%= render ViewComponentUI::FlexComponent.new(direction: :end) do %>
      <%= render ViewComponentUI::ButtonComponent.new(color_scheme: :gray, on_click: "open = ! open") do %>
        Close
      <% end %>
    <% end %>
  <% end %>
<% end %>

